{
  "name": "rat-gateway",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "build:win": "tsc && pkg . --targets node18-win-x64 --output build/gateway-windows.exe",
    "build:linux": "tsc && pkg . --targets node18-linux-x64 --output build/gateway-linux",
    "build:mac": "tsc && pkg . --targets node18-macos-x64 --output build/gateway-macos",
    "build:all": "npm run build && npm run build:win && npm run build:linux && npm run build:mac"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "../Website/**/*",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.19.130",
    "@types/ws": "^8.5.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "pkg": "^5.8.1"
  }
}